 <fieldset id="grupos">
    <label> Autorizações: </label>
     <input type="hidden" name="autorizacoes" value="[% autorizacoes | html %]" />
     <input type="hidden" name="basedn" value="[% basedn %]" />
     <dt><input type="checkbox" name="herdar_author" [% IF herdar == 1 %] checked [% END %] /> Herdar Autorizações do Volume</dt>

[% SET labels_roles = {
        "alterar" => "Alterar este Prontuario",
        "criar" => "Criar Documentos neste Prontuario",
        "listar" => "Listar este Prontuario",
        "visualizar" => "Ver este Prontuario",
        "transferir" => "Transferir este Prontuario",
   } %]

     <table>
      <thead>
        <th>Grupo</th>
        <th>Permissão</th>
        <th><input type="submit" name="opcao" value="Remover"></th>
      </thead>
      <tbody>
        [% SET count = 0 %]
        [% IF autorizacoes %]
          [% FOREACH a IN c.model('Dossie').desserialize_autorizacoes(autorizacoes).autorizacao %]
          <tr>
            <td>[% c.model('LDAP').decompose_dn_grupos(a.principal).reverse.join(' - ') %]</td>
            <td>[% labels_roles.item(a.role) %]</td>
            <td><input type="checkbox" name="remover_autorizacao_[% count %]" /></td>
          </tr>
          [% SET count = count + 1 %]
          [% END %]
        [% END %]
      </tbody>
     </table>

     <dl>
          <dt class="grp"> Grupo de Usuário e Ações</dt>

