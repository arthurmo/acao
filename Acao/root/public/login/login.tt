[% INCLUDE 'header.tt' %]

[% SET erro = c.flash.erro _ '' %]
[% IF erro %]
<span class="erro">
  [% IF erro.match("usuario-invalido") %]Dados incorretos![% END %]
</span>
[% END %]
<form id="form" method="post" action="[%c.uri_for('/login')%]">
 <fieldset><legend>Dados de Autenticação</legend>
  <DL>
   <DT>Usuário:</DT>
   <DD><input type="text" name="user" /></DD>
   <DT>Senha:</DT>
   <DD><input type="password" name="password" /></DD>
   <input type="submit" name="submit" value="Entrar" />
  </DL>
 </fieldset>
</form>
[% INCLUDE 'footer.tt' %]
